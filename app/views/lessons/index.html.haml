%h1= t('.title')

= paginate @lessons, theme: 'bootstrap-5'
- @lessons.each do |lesson|
  .card.mb-4
    .card-body
      .card-title.fw-bold= lesson.title
      %p.card-text= lesson.summary
      = link_to t('lessons.show.title'), lesson_path(lesson), class: 'btn btn-primary'
= paginate @lessons, theme: 'bootstrap-5'
