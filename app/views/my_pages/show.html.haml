= title_dom(t('.title'))

%h2.fs-5.mb-4 予約したレッスン一覧
= paginate @reservations, theme: 'bootstrap-5'
%table.table.border.text-center
  %thead
    %tr
      %th= Lesson.human_attribute_name(:title)
      %th= LessonDate.human_attribute_name(:start_at)
      %th= LessonDate.human_attribute_name(:end_at)
      %th= Lesson.human_attribute_name(:instructor)
      %th= LessonDate.human_attribute_name(:url)
      %th
  %tbody
    - @reservations.each do |reservation|
      %tr
        %td= link_to reservation.lesson_date.lesson.title, lesson_path(reservation.lesson_date.lesson)
        %td= l reservation.lesson_date.start_at, format: :without_seconds
        %td= l reservation.lesson_date.end_at, format: :without_seconds
        %td= reservation.lesson_date.lesson.instructor
        %td= link_to reservation.lesson_date.url, reservation.lesson_date.url
        %td
          = button_to t('.cancel_reservation'), reservation_path(reservation),
                      method: :delete, data: { turbo_confirm: t('.cancel_confirm') },
                      class: 'btn btn-outline-danger'
= paginate @reservations, theme: 'bootstrap-5'
