!!!
%html
  %head
    %meta{ content: 'text/html; charset=UTF-8', 'http-equiv': 'Content-Type' }
    %title SakuraLesson
    %meta{ content: 'width=device-width,initial-scale=1', name: 'viewport' }
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag 'application', 'data-turbo-track': 'reload'
    = javascript_include_tag 'application', 'data-turbo-track': 'reload', type: 'module'
  %body
    %nav.navbar.bg-body-tertiary
      .container-fluid
        %div
          = link_to 'sakuraレッスン', root_path, class: 'navbar-brand'
          = link_to t('lessons.index.title'), root_path, class: 'mx-2 btn'
          - if user_signed_in?
            = link_to t('my_pages.show.title'), my_page_path, class: 'mx-2 btn'
        - if user_signed_in?
          = button_to t('menus.sign_out'), destroy_user_session_path, class: 'float-end btn', method: :delete
        - else
          = link_to t('devise.sessions.new.sign_in'), user_session_path, class: 'float-end btn'
    = render 'layouts/flash_message'
    .container
      = yield
